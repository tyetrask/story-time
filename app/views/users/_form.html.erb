<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.text_field :email, class: 'simple', placeholder: 'email' %>
  </div>
  
  <div>
    <%= f.password_field :password, class: 'simple', placeholder: 'password' %>
  </div>
  
  <div>
    <%= f.text_field :pivotal_api_token, class: 'simple', placeholder: 'pivotal api token' %>
  </div>
  
  <% if current_user.is_admin %>
  <div>
    <p class='simple-divider'><%= f.check_box :approved %> <small>approved?</small></p>
  </div>
  <br />
  <% end %>
  
  <div>
    <%= f.submit 'Update', class: 'simple' %>
  </div>
<% end %>
