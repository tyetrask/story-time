<br />
<div>
  <div>
    <h1>Users</h1>
  </div>
  <div>
    <p><%= link_to 'Create New User', new_user_path %></p>
    <table>
      <thead>
        <tr>
          <th>email</th>
          <th>approved?</th>
          <th>admin?</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.approved %></td>
            <td><%= user.is_admin %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
