<div class='row'>
  <div class='col-sm-1'></div>
  
  <div class='col-sm-5'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        <strong>Project:</strong> <%= @pivotal_project['name'] %><span class='pull-right'><strong>Me:</strong> <%= @me['id'] %></span>
      </div>
    </div>
    
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <strong>My Work:</strong>
      </div>
      <div class="list-group">
        <%= render partial: 'pivotal_story', collection: @my_work %>
      </div>
    </div>
   
    <% @pivotal_iterations.each do |pivotal_iteration| %>
      <div class='panel panel-default'>
        <div class='panel-heading'>
          <strong>Iteration:</strong> <%= pivotal_iteration['number'] %>
        </div>
        
        <div class="list-group">
          <%= render partial: 'pivotal_story', collection: pivotal_iteration['stories'] %>
        </div>
      </div>
      <br /><br />
    <% end %>
  </div>
  
  <div class='col-sm-5'>
    <div class='panel panel-primary'>
      <div class='panel-heading'>
        Magic Clock
      </div>
      <div id='clock-container' class='panel-body'>
      </div>
    </div>
  </div>
  
  <div class='col-sm-1'></div>
</div>
